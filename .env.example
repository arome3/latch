# =============================================================================
# Latch Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# RPC Endpoints
# -----------------------------------------------------------------------------
RPC_MAINNET=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_SEPOLIA=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_ANVIL=http://127.0.0.1:8545

# -----------------------------------------------------------------------------
# Deployment
# -----------------------------------------------------------------------------
# Private key for deployments (without 0x prefix)
# WARNING: Use a dedicated deployer wallet, never your main wallet
DEPLOYER_PRIVATE_KEY=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=

# -----------------------------------------------------------------------------
# Pool Configuration (defaults)
# -----------------------------------------------------------------------------
# Fee tier in basis points (3000 = 0.3%)
DEFAULT_FEE=3000

# Tick spacing (60 is standard for 0.3% pools)
DEFAULT_TICK_SPACING=60

# -----------------------------------------------------------------------------
# Latch Hook Configuration
# -----------------------------------------------------------------------------
# Auction duration in seconds (default: 5 minutes)
AUCTION_DURATION=300

# Minimum batch size before auction can settle
MIN_BATCH_SIZE=5

# Maximum orders per batch
MAX_ORDERS=16
